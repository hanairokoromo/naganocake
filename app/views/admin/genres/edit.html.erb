<h1 class="head-line title_h1 text-center">ジャンル編集</h1>
<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
    <div class="form-group">
      <label for="name">ジャンル名</label>
      <%= f.text_field :name, class: "form-control name" %>
    </div>
    <div class="form-group">
      <%= f.submit '変更を保存', class: "btn btn-success" %>
    </div>
    <% end %>
    <div>
      <%= link_to "戻る", admin_genres_path, class: "glyphicon glyphicon-home btn btn-info" %>
    </div>
  </div>
</div>