<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2 class="mt-3">ジャンル追加</h2>
　　　<%= form_with model: @genre, url: admin_genres_path do |f| %>
　　　<div class="form-group">
　　　  <label for="name">ジャンル名</label>
　　　  <%= f.text_field :name, class: "form-control name" %>
　　　</div>
　　　<div class="form-group">
　　　  <%= f.submit '追加', class: "btn btn-success" %>
　　　</div>
　　　<% end %>
　　</div>
　　<div class="col-md-8 offset-md-1">
　　  <h2>ジャンル一覧</h2>
　　  <table class="table">
　　    <thead>
　　      <tr>
　　        <th>ジャンル名</th>
　　        <th></th>
　　      </tr>
　　    </thead>
　　    <tbody>
　　      <% @genres.each do |genre| %>
　　      <tr>
　　        <td><%= genre.name %></td>
　　        <td class="genre-td">
　　          <%= link_to "編集する", edit_admin_genre_path(genre), class: "glyphicon glyphicon-pencil btn btn-success" %>
　　        </td>
　　      </tr>
　　      <% end %>
　　    </tbody>
　　  </table>
　　</div>
　</div>
</div>