<h1>注文履歴詳細</h1>
<h4>購入者</h4>
<%= @order.name %>
<H4>注文日</H4>
<%= @order.created_at %>
<h4>配送先</h4>
<%= @order.address %>
<h4>支払方法</h4>
<%= @order.payment_method_i18n %>
<h4>料金</h4>
<%= @order.total_payment %>
<%= form_with model: @order, url: admin_order_path(@order), method: :patch do |f| %>
  <h4>注文ステータス</h4>
  <%= f.select :statuses, Order.statuses.keys %>
  <%= f.submit '更新' %>
<% end %>

<% @order_details.each do |order_details| %>
  <h4>商品名</h4>
  <%= order_details.item.name %>
  <h4>価格</h4>
  <%= order_details.price %>
  <h4>数量</h4>
  <%= order_details.amount %>
  <h4>合計</h4>
  <%= order_details.price*order_details.amount %>
  <%= form_with model: order_details, url: admin_order_details_path, method: :patch do |f| %>
    <h4>製作ステータス</h4>
    <%= f.select :making_status, OrderDetail.making_statuses.keys %>
    <%= f.submit '更新' %>
  <% end %>
<% end %>