<h1>会員編集画面</h1>
<%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集

<%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
  <h4>姓</h4>
  <%= f.text_field :last_name %>
  <h4>名</h4>
  <%= f.text_field :first_name %>
  <h4>姓カナ</h4>
  <%= f.text_field :last_name_kana %>
  <h4>名カナ</h4>
  <%= f.text_field :first_name_kana %>
  <h4>メールアドレス</h4>
  <%= f.text_field :email %>
  <h4>郵便番号</h4>
  <%= f.text_field :postal_code %>
  <h4>住所</h4>
  <%= f.text_field :address %>
  <h4>電話番号</h4>
  <%= f.text_field :telephone_number %>
  <h4>会員ステータス</h4>
  <%= f.radio_button :is_deleted, true %>
  <%= f.label :is_deleted, "退会済み" %>
  <%= f.radio_button :is_deleted, false %>
  <%= f.label :is_deleted, "有効" %>
  <%= f.submit 'Update' %>
<% end %>


