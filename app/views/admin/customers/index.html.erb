<h1 class="head-line title_h1 text-center">会員一覧</h1>
<div class="row">
  <div class="col-md-8 offset-md-1">
    <table class="table table-hover table-borderd table-condensed">
      <thead>
        <tr class="info">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>会員ステータス</th>
        </tr>
      </thead>
      <tobody>
        <% @customers.each do |customer| %>
        <tr>
          <td>
            <%= customer.id %>
          </td>
          <td>
            <%= link_to admin_customer_path(customer) do %>
            <%= customer.last_name %><%= customer.first_name %>
            <% end %>
          </td>
          <td>
            <%= customer.email %>
          </td>
          <td>
            <% if customer.is_deleted == true %>
              <p><i class="fas fa-bullseye red"></i>退会済み</p>
            <% else %>
              <p><i class="fas fa-bullseye red"></i>有効</p>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
