<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2 class="head-line title_h2 text-center">商品新規登録</h2>
    <%= form_with model: @item, url: admin_items_path do |f| %>
    <div class="form-group">
      <label for="form-group">商品名</label>
      <%= f.text_field :name, class: "form-control name" %>
    </div>
    <div class="form-group">
      <label for="image">画像</label>
      <%= f.file_field :image, class: "form-control-image image" %>
    </div>
    <div class="form-group">
      <label for="introduction">商品説明</label>
      <%= f.text_area :introduction, class: "form-control introduction" %>
    </div>
    <div class="form-group">
      <label for="genre">ジャンル</label>
      <%= f.collection_select(:genre_id, @genres, :id, :name) %>
    </div>
    <div class="form-group">
      <label for="price">価格</label>
      <%= f.text_field :price, class: "form-control price" %>
    </div>
    <div class="form-group">
      <label for="status">販売ステータス</label>
      <%= f.select :is_active, [['販売中', true], ['販売停止', false]] %>
    </div>
    <div class="form-group">
      <%= f.submit '作成', class: "btn btn-secondary" %>
    </div>
    <% end %>
  </div>
</div>


