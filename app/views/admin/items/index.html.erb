<h1 class="head-line title_h1 text-center">商品一覧</h1>
<div class="row">
  <div class="col-md-8 offset-md-1">
    <%= link_to new_admin_item_path, class: "btn btn-warning pull-right new_item" do %>
    <i class="fas fa-plus"></i>
    新規商品登録
    <% end %>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>商品画像</th>
          <th>商品名</th>
          <th>価格</th>
          <th>販売ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= image_tag item.image, size: "5×5" %></td>
          <td>
            <%= link_to admin_item_path(item), class: "btn-link" do %>
              <%= item.name %>
            <% end %>
          </td>
          <td><%= item.price %></td>
          <td>
            <% if item.is_active == true %>
              <p><i class="fas fa-bullseye red"></i>販売中</p>
            <% else %>
              <p><i class="fas fa-bullseye blue"></i>販売停止中</p>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
