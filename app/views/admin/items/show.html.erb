<h1 class="head-line title_h1 text-center">商品詳細</h1>
<div class="row">
  <div class="col-md-8 offset-md-1">
    <table class="table">
      <tbody>
        <tr>
          <td><%= image_tag @item.image, height: "180" %></td>
          <td><%= @item.name %></td>
          <td><%= @item.price %>円</td>
          <td><%= @item.introduction %></td>
          <td>
            <% if @item.is_active == true %>
              <p><i class="fas fa-bullseye red"></i>販売中</p>
            <% else %>
              <p><i class="fas fa-bullseye blue"></i>販売停止中</p>
            <% end %>
          </td>
          <td><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-sm btn-success" %></td>
          <td><%= link_to "戻る", admin_items_path(@item), class: "btn btn-sm btn-success" %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>