<div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2 class="head-line title_h2 text-center">配送先編集</h2>
        <%= form_with model: @address, url: public_addresse_path(@address), method: :patch do |f| %>
        <div class="form-group">
            <label for="name">宛名</label>
            <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
            <label for="postal_code">郵便番号</label>
            <%= f.text_field :postal_code, class: "form-control postal_code" %>
        </div>
        <div class="form-group">
            <label for="address">住所</label>
            <%= f.text_field :address, class: "form-control address" %>
        </div>
        <div class="form-group">
            <%= f.submit '追加', class: "btn btn-success" %>
        </div>
        <% end %>
        <div>
            <%= link_to "戻る", public_addresse_path, class: "glyphicon glyphicon-home btn btn-info" %>
        </div>
    </div>
</div>