<div class="row">
    <div class="col-md-3">
        <h2 class="mt-3">配送先登録</h2>
        <%= form_with model: @address, url: public_addresses_path(@address) do |f| %>
        <div class="form-group">
            <label for="name">宛名</label>
            <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
            <label for="postal_code">郵便番号</label>
            <%= f.text_field :postal_code, class: "form-control postal_code" %>
        </div>
        <div class="form-group">
            <label for="address">住所</label>
            <%= f.text_field :address, class: "form-control address" %>
        </div>
        <div class="form-group">
            <%= f.submit '追加', class: "btn btn-success" %>
        </div>
        <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
        <h2>配送先一覧</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>宛名</th>
                    <th>郵便番号</th>
                    <th>住所</th>
                </tr>
            </thead>
            <tbody>
                <% @addresses.each do |address| %>
                <tr>
                    <td><%= address.name %></td>
                    <td><%= address.postal_code %></td>
                    <td><%= address.address %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>